<div class="container">
  <div class="row text-center justify-content-center">
    <form class="col-6 mt-3" action="/restaurants" method="POST">

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳名稱</span>
        </div>
        <input type="text" class="form-control" placeholder="中文" name="name" required aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳名稱</span>
        </div>
        <input type="text" class="form-control" placeholder="英文" name="name_en" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳類別</span>
        </div>
        <input type="text" class="form-control" placeholder="category" name="category" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳圖片</span>
        </div>
        <input type="url" class="form-control" placeholder="image URL" name="image" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳地址</span>
        </div>
        <input type="text" class="form-control" placeholder="location" name="location" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳電話</span>
        </div>
        <input type="text" class="form-control" placeholder="phone numbers(0-9)" name="phone" pattern="[0-9]{9,11}"
          aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳評分</span>
        </div>
        <input type="number" class="form-control" placeholder="rating" name="rating" min="1" max="5" step="0.1" required
          aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">餐廳介紹</span>
        </div>
        <input type="text" class="form-control" placeholder="description" name="description"
          aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-default">Google Map</span>
        </div>
        <input type="url" class="form-control" placeholder="Google Map UR" name="google_map"
          aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>

      <button class="btn btn-primary mb-3" type="submit">新增餐廳</button>

    </form>
  </div>
</div>